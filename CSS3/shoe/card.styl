*
    margin 0
    padding 0

body
    display flex
    align-items: center//使contaner在页面上居中
    justify-content center
    min-height 100vh
    background-color #131313

.container
    position: relative

.dw_card
    position relative
    width 320px
    height 450px
    background-color #232323
    border-radius 20px
    overflow hidden
    &:before//写伪元素
        content ''
        position absolute
        top: 0
        left: 0
        width 100%
        height 100%
        background-color #9bdc28
        transition all 0.5s
        clip-path circle(150px at 80% 20%)
    &:hover:before
        clip-path: circle(300px at 80% -20%)
    &:hover 
        .dw_card__imgBx
            top 0
            transform  translateY(0)
            img
                position absolute
                top 50%
                left 50%
                z-index 1000
                width 270px
                transform translate(-50%, -20%) rotate(-25deg)
        .dw_card__contentBx
            height 210px       
    .dw_card__imgBx
        position absolute
        top 50%
        transform translateY(-50%)//居中的方法
        width 100%
        z-index 1000
        transition all 0.5s 
    .dw_card__contentBx
        position absolute
        bottom 0
        width 100%
        height 100px
        text-align: center
        transition 1s
        z-index: 0
        h2
            position relative
            font-weight: 600
            letter-spacing: 1px
            color #fff
        .dw_card__size,.dw_card__color
            display flex
            justify-content center
            align-items: center
            padding 8px 20px
            transition: 0.5s
            h3
                color: #ffffff
                font-weight 300px
                font-size: 14px
                text-transform: uppercase
                letter-spacing: 2px
                margin-right: 10px
            span
                width 26px
                height 26px
                text-align center
                background-color: #fff
                border-radius: 4px
                margin 0px 5px
                line-height 26px
                display inline-block
                cursor pointer
               